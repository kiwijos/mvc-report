<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://kit.fontawesome.com/2897e71327.js" crossorigin="anonymous"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav id="navbar">
                <ul>
                    <li><a href="{{ path('index') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li class="dropdown">
                        <a href="{{ path('report') }}">Report</a>
                        <div class="dropdown-content">
                            {% for suff in ['01', '02', '03', '04', '05', '06', '10'] %}
                                <a href="{{ path('report') ~ '#kmom' ~ suff }}">kmom{{ suff }}</a>
                            {% endfor %}
                            
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('work') }}">Work</a>
                        <div class="dropdown-content">
                            <a href="{{ path('lucky') }}">Lucky</a>
                            <a href="{{ path('pig_index') }}">Pig Game</a>
                            <a href="{{ path('card_index') }}">Card Game</a>
                        </div>
                    </li>
                    <li class="dropdown">
                        <a href="{{ path('api') }}">API</a>
                        <div class="dropdown-content">
                            <a href="{{ path('quote') }}">Quote</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </header>
        <main role="main">
            {# read and display all flash messages #}
            {{ include('./partials/_flash.html.twig') }}
            {% block body %}{% endblock %}
        </main>
        <footer>
            <div class="footer">
                <ul>
                    <li>&copy; 2023 Alex Lindqvist</li>|
                    <li><a href="{{ my_github }}" target="_blank" class="icon"><i class="fa-brands fa-github"></i></a></li>
                </ul>
            </div>
        </footer>
    </body>
</html>
