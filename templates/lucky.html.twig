{% extends "base.html.twig" %}

{% block title %}Lucky{% endblock %}

{% block body %}
    <div class="content-header">
        <h1 class="title"><span class="highlight">Lucky you!</span> You've stumbled upon the number {{ number }}.</h1>
        <p class="sub-title"></p>

        <img
        srcset="{{ asset('img/lucky.png') }}, {{ asset('img/lucky-2x.png') }} 2x"
        src="{{ asset('img/lucky-2x.png') }}"
        alt="Drawing of a fast food person."
        class="invert">
    </div>
   
{% endblock %}