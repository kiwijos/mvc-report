{% extends "base.html.twig" %}

{% block title %}Card Game{% endblock %}

{% block body %}

<div class="content-header">
    <h1 class="title">Card Game</span></h1>
    <p class="sub-title"></p>
    <div class="deck draw">
        {% for player in deal %}
            <div class="hand">
            {% for card in player %}
                <span class="card">{{ card }}</span>
            {% endfor %}
            </div>
        {% endfor %}
        <span class="card">{{ count }}</span>
    </div>
</div>

{% endblock %}
